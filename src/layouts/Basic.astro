---
import SEO from '@julian_cataldo/astro-seo/SEO.astro';
import data from '../_data/data.json';
import '@fontsource/quicksand/400.css';
import '@fontsource/quicksand/700.css';
import '@fontsource/work-sans/400.css';
import '@fontsource/work-sans/400-italic.css';
import '@fontsource/work-sans/700.css';
import '@fontsource/work-sans/700-italic.css';
export interface Props {
	title: string;
}
const { title } = Astro.props;
let iconSizes = [16, 32, 96];
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<SEO
			title={title}
			description={data.description}
			image="/portrait_500x500.png"
			siteName="Ruby Quail Design"
		/>
		{
			iconSizes.map(sz => (
				<link
					rel="icon"
					type="image/png"
					sizes={`${sz}x${sz}`}
					href={`/icons/logo${sz}.png`}
				/>
			))
		}
		<slot name="head" />
	</head>
	<slot />
</html>
